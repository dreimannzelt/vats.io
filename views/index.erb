<!doctype>
<html>
  <head>
    <meta charset="utf-8" />
    <title>VATS.io</title>
  </head>
  <body>
    <div id="content">
      <h1>VATS.io</h1>

      <div id="endpoints">
        <ul>
          <li><a href="/rates.json">All rates</a></li>
          <li><a href="/names.json">All names and abbrevations</a></li>
        </ul>
      </div>
      <div id="calculate">
        <form method="get" actions="/rates">
          <div>
            Convert
            <input type="number" name="amount" id="amount" placeholder="value" />
            as
            <select id="net" name="net">
              <option value="true">net</option>
              <option value="false">gross</option>
            </select>
            from
            <select name="origin_code" id="origin_code">
              <% @vats.each do |k, v| %>
              <option value="<%= k %>" <%= "selected" if @country_code == k %>><%= k.upcase %></option>
              <% end %>
            </select>
            to
            <select name="target_code" id="target_code">
              <% @vats.each do |k, v| %>
              <option value="<%= k %>" <%= "selected" if @country_code == k %>><%= k.upcase %></option>
              <% end %>
            </select>
          </div>
          <input type="submit" name="Go" />
        </form>
        <div id="result">
          Net: <span id="net"></span> //
          Gross: <span id="gross"></span> //
          Tax: <span id="tax"></span>
        </div>
      </div>
    </div>

    <div id="credits">
      Flame-grilled by
      <a href="http://www.dreimannzelt.de">Dreimannzelt</a>
    </div>

    <link href="/styles.css" rel="stylesheet" />
    <script src="/jquery.min.js" type="text/javascript"></script>
    <script src="/app.js" type="text/javascript"></script>
